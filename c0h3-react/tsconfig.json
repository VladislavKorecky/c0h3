{
  "compilerOptions": {
    // typescript settings
    "target": "ES6", 
    "module": "commonjs",
    "rootDir": "./src",
    "forceConsistentCasingInFileNames": true,
    "strict": true, 
    "skipLibCheck": true, 

    // react
    "baseUrl": "src",
    "jsx": "react-jsx",

    // json import fix
    "resolveJsonModule": true,
    "esModuleInterop": true,
  },
  "include": ["src"]
}